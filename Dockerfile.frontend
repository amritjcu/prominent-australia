# Use Node.js official image
FROM node:18-alpine

# Set working directory
WORKDIR /app

# Copy package.json and install dependencies
COPY package.json package-lock.json ./
RUN npm ci --omit=dev

# Copy the frontend source code
COPY . .

# Build the frontend
RUN npm run build

# Expose a port (for Vite if needed)
EXPOSE 5173

# Start frontend
CMD ["npm", "run", "preview"]
